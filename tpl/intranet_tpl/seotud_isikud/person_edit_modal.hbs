<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Isiku muutmine</h4>
</div>

<div class="modal-body">

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Lähikondlase nimi</label>
                <div class="input-group" style="width: 100%;">
                    <input id="relative_name" name="relative_name" type="text" class="form-control autofetch"  value="{{person.displayname}}" data-api="search_people_autofetch" data-select_func="poeple_select">
                    <div class="autofetch_results"></div>
                    <label style="display: none;" for="relative_name" class="error" id="relative_name-error">See väli on kohustuslik.</label>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Isikukood</label>
                <div class="input-group" style="width: 100%;">
                    <input id="person_code" name="person_code" type="text" class="form-control autofetch"  value="{{person.personcode}}">
                    <label style="display: none;" for="person_code" class="error" id="person_code-error">Palun sisesta korrektne isikukood.</label>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Seotus</label>
                <div class="input-group" style="width: 100%;">
                    <select id="relation_people" class="chosen-select" data-placeholder="{{t.txt_search_dot_dot}}">
                        {{#each relations_people}}
                        <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>
    </div>


</div>

<div class="modal-footer">
    <div class="row">
        <div class="col-sm-12">
            <button type="button" class="btn btn-white" data-dismiss="modal">Sule</button>
            <button type="button" id="savePersonBtn" class="btn btn-primary">Salvesta</button>
        </div>
    </div>
</div>

