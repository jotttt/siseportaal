<!-- DETAILVAADE -->
<div class="tab-pane fade active in userInputDiv" id="c">

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-lg-4">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-user"></i> Seotud isikud: </div>
                <div class="panel-body">
                    {{> persons_table}}
                </div>
            </div>
            {{#unless statusIsDeclared}}
            <a href="#person_modal" id="add_person" data-toggle="modal" class="btn btn-default btn-panel"><i class="fa fa-plus"></i> Lisa seotud isik</a>
            {{/unless}}
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-briefcase"></i> Seotud firmad: </div>
                <div class="panel-body">
                    {{> companies_table}}
                </div>
            </div>
            {{#unless statusIsDeclared}}
            <a href="#company_modal" id="add_company" data-toggle="modal" class="btn btn-default btn-panel"><i class="fa fa-plus"></i> Lisa seotud firma</a>
            {{/unless}}
        </div>
    </div>
    {{#if noData}}
    <div class="row m-t">
        <div class="col-md-12">
            <strong class="pull-right m-b">Juhul kui Teil ei ole andmeid deklareerida, vajutage andmeid sisestamata nuppu <i>Kinnita deklaratsioon</i></strong>
        </div>
    </div>
    {{/if}}
    {{#if statusIsDeclared}}
    <div class="row m-t">
        <div class="col-md-6"></div>
					<div class="col-md-6">
           <div class="alert alert-success text-center">
            <i class="fa fa-check text-success"></i> Teie andmed on deklareeritud. Kui tahate veel midagi parandada, vajutage nuppu <i>Muuda andmeid</i>
            </div>
        </div>
    </div>
    {{/if}}
    <div class="row">
        <div class="col-xl-12 text-right">
            <a href="" id="unDeclareData" class="btn btn-default" {{#unless statusIsDeclared}}style="display: none;"{{/unless}} ><i class="fa fa-edit"></i> Muuda andmeid</a>
            <a href="" id="declareData" class="btn btn-primary" {{#if statusIsDeclared}}style="display: none;"{{/if}} ><i class="fa fa-check-square-o"></i>Kinnita deklaratsioon</a>
        </div>
    </div>

</div>
