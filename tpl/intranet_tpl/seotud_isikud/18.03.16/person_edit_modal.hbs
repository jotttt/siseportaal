<div id="personEditMmodal" class="modal fade" tabindex="-1">
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Isiku muutmine</h4>
</div>
<div class="modal-body">

    <div class="panel panel-default">
        <div class="panel-body">

            <div class="row">
                <div class="col-sm-10">
                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Isikukood</label>
                                <div class="input-group" style="width: 100%;">
                                    <input id="personcode" name="personcode" type="text" class="form-control"  value="{{person.personcode}}">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Nimi</label>
                                <div class="input-group" style="width: 100%;">
                                    <input id="displayname" name="displayname" type="text" class="form-control"  value="{{person.displayname}}">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Seotus</label>
                                <div class="input-group" style="width: 100%;">
                                    <select id="relation_people" class="chosen-select" data-placeholder="{{t.txt_search_dot_dot}}">
                                        {{#each relations_people}}
                                        <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Firma&nbsp;nimi</label>
                                <div class="input-group" style="width: 100%;">
                                    <select id="company" class="chosen-select" data-placeholder="{{t.txt_search_dot_dot}}">
                                        {{#each companies}}
                                        <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                    <a href="#add_organization" id="add_organization" class="btn btn-primary"><i class="fa fa-plus"></i> Lisa firma</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Seotus&nbsp;firmaga</label>
                                <div class="input-group" style="width: 100%;">
                                    <select id="relation_business" class="chosen-select" data-placeholder="{{t.txt_search_dot_dot}}">
                                        {{#each relations_business}}
                                        <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>


</div>
<div class="modal-footer">
    <div class="row">
        <div class="col-sm-4">

        </div>
        <div class="col-sm-8">
            <button type="button" class="btn btn-white" data-dismiss="modal">Sule</button>
        </div>


    </div>
</div>
</div>
