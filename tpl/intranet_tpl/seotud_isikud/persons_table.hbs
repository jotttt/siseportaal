<table  id="personsTable" class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>Seotud isik</th>
            <th>Isikukood</th>
            <th>Seos minuga</th>
            {{#unless statusIsDeclared}}
            <th></th>
            {{/unless}}
        </tr>
    </thead>

    <tbody>
        {{#each people}}
        <tr data-id="{{this.id}}">
            <td>{{this.displayname}}</td>
            <td>{{this.personcode}}</td>
            <td>{{this.relation_name}}</td>
            {{#unless ../statusIsDeclared}}
            <td>
                <div class="text-center">
                    <a href="#" class="btn btn-white fa fa-pencil-square-o btn_border editPerson"></a>
                    <a href="#" class="btn btn-white msg_remove fa fa-trash-o btn_border deletePerson"></a>
                </div>
            </td>
            {{/unless}}
        </tr>
        {{/each}}
    </tbody>
</table>
