<table data-employee_id="{{person.employee_id}}" class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>Algus</th>
            <th>Lõpp</th>
            <th>Tüüp</th>
            {{#if person.canEdit}}
            <th></th>
            {{/if}}
        </tr>
    </thead>
    <tbody>
        {{#each person.vacations}}
        <tr data-id="{{this.id}}">
            <td>{{this.start_date}}</td>
            <td>{{this.end_date}}</td>
            <td>{{this.absence_name}}</td>
            <td>
                <div class="text-center">
                    <a href="#" class="btn btn-white fa fa-pencil-square-o btn_border editVacation"></a>
                    <a href="#" class="btn btn-white msg_remove fa fa-trash-o btn_border deleteVacation"></a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
