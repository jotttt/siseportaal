<!-- MODAL CONTENT -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">{{t.txt_modal_title}}</h4>
            </div>
            <div class="modal-body">
                <div id="dialogType" data-type="{{dialogType}}" data-employee_id="{{vacation.employee_id}}" data-display_name="{{vacation.display_name}}"></div>
                <div id="absence_id" data-absence_id="{{vacation.id}}"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>{{t.txt_person}}</label>
                            {{#if employees}}
                            <select id="person" class="chosen-select" data-placeholder="{{t.txt_search_dot_dot}}">
                                {{#each employees}}
                                <option value="{{this.employeeID}}" {{#if this.selected}}selected{{/if}}>{{this.display_name}}</option>
                                {{/each}}
                            </select>
                            {{else}}
                            {{vacation.display_name}}
                            {{/if}}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>{{t.txt_absence_type}}</label>
                            <div class="input-group" style="width: 100%;">
                                <select name="type_id" id="absence_type" class="chosen-select" {{#unless acl}}disabled{{/if}}>
                                    {{#each absence_types}}
                                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>{{t.txt_date_range}}</label>
                            <div class="input-daterange input-group" id="datepicker" style="width: 100%;">
                                <input id="start_date" type="text" class="input-sm form-control" name="start" value="{{vacation.start_date}}" {{#unless acl}}disabled{{/if}} readonly>
                                <span class="input-group-addon">{{t.txt_to}}</span>
                                <input  id="end_date" type="text" class="input-sm form-control" name="end" value="{{vacation.end_date}}" {{#unless acl}}disabled{{/if}} readonly>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{> replacements}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-sm-4">
                        {{#if showDeleteBtn}}<button type="button" id="deleteBtn" class="btn btn-white pull-left" data-dismiss="modal"><i class="fa fa-remove"></i> {{t.txt_delete}}</button>{{/if}}
                    </div>
                    <div class="col-sm-8">
                        <button type="button" class="btn btn-white" data-dismiss="modal">{{t.txt_close}}</button>
                        {{#if acl}}<button type="button" id="saveBtn" class="btn btn-primary">{{t.txt_save}}</button>{{/if}}
                    </div>
                </div>
            </div>
<!-- end modal content -->
