<li class="action-badge" data-id="{{action.uid}}" data-parentId="{{action.parent_id}}" data-level="{{action.level}}">
	<div class="m-xs">
		<div class="row">
			<div class="col-lg-12">
				<strong>{{action.title}}</strong>
			</div>
			<div class="badge badge-info m-l-xs">{{action.progress}}%</div>
		</div>
		<div class="row ">
			<div class="col-xl-12 m-t-xs">
				<a href="#/" class="action-badge-open-details"><i class="fa fa-chevron-down pull-right"></i></a>
			</div>
		</div>
	</div>
	<div class="action-badge-details-container ">
		<div class="action-badge-details">
			<div class="row">
				<div class="col-xs-12">
					<p class="p-xs p-b-none">{{action.descr}}</p>
				</div>
				<div class="col-sm-5">
					<h5 class="text-muted text-uppercase m-b-xxs m-l">{{t.txt_responsible}}</h5>
					<strong class="inline m-l">{{action.raci_r_displayname}}</strong>
				</div>
				<div class="col-sm-4">
					<h5 class="text-muted text-uppercase m-b-xxs m-l">{{t.txt_due}}</h5>
					<div class=""><strong class="m-l">{{action.due}}</strong></div>
				</div>
				<div class="col-sm-3">
				</div>
			</div>
			<div class="action-tools">
				<a href="#/" class="action-badge-edit-btn" data-uid="{{action.uid}}"><span><i class="fa fa-search"></i></span></a>
				{{#compare action.level "<" "2"}}
				<a href="#" class="add-new-action-L2-btn"><i class="fa fa-plus"></i></a>
				{{/compare}}
				<a href="#" class="delete-action-L2-btn"><i class="fa fa-times"></i></a>
			</div>
		</div>
	</div>
</li>
